@using PontoSys.AppMvc.Extensions
@model PontoSys.AppMvc.ViewModels.FornecedorViewModel
@{
    ViewBag.Title = "Detalhes";
}

<h2>Detalhes</h2>
<div>
    <h4>Informação somente para leitura</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Documento)
        </dt>
        <dd class="col-sm-10">
            @this.FormatarDocumento(Model.TipoFornecedor, Model.Documento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ativo)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-warning" href="@Url.Action("Edit", "Fornecedores", new {id = Model.Id})">Editar</a>
    <a class="btn btn-info" href="@Url.Action("Index", "Fornecedores")">Voltar</a>
</div>
   
@Html.Partial("_DetalhesEndereco")


